{% extends 'base.html.twig' %}

{% block title %}Sites{% endblock %}

{% block body %}
    <h1>Sites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ site.description }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ site.creationDate ? site.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ site.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ site.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('sites_index') }}">back to list</a>

    <a href="{{ path('sites_edit', {'id': site.id}) }}">edit</a>

    {{ include('sites/_delete_form.html.twig') }}
{% endblock %}
